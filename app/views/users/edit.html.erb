<div class="body">
<div class="container">
<div class="row">
<h2>User info</h2>
<%= render "layouts/usererror" %>
<%= form_for(@user) do |f| %>
<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<%= f.label :introduction %>
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
</div>
<div class="col-md-3"></div>
</div>
</div>